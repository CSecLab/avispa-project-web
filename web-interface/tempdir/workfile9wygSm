role keyowner(
	A,B : agent,
	M :message,
	SND,RCV : channel(dy))
played_by A def=
       local
	State : nat,
	UINFO,QUES,ANS,STATUS: message
init
	State :=0
transition
sendforgot. State=0 /\ RCV(start)=|>
	      State':=2 /\ UINFO':=new() /\ SND(UINFO)
receivequestion. State=2/\ RCV(QUES)=|>
	 State':=4 /\ ANS':=new() /\ SND(ANS)
receivestatus. State=4 /\ RCV(STATUS)=|>
	 State':=6 /\ witness(A,B,renewal_ans,ANS) /\ request(B,A,renewal_ans,ANS)
end role

role keymanager(
	A,B :agent,
	SND,RCV :channel(dy))
played_by B def=
 local
 	State :nat,
 	UINFO,QUES,ANS,STATUS: message
		
 init
	State :=1
 transition
 receiveforgot. State=1 /\ RCV(UINFO)=|>
 		   State':=3 /\ QUES':=new() /\ SND(QUES)
 receiveanswer. State=3 /\ RCV(ANS)=|>
 		  State':=5 /\ SND(STATUS)/\ secret(B,A,renewal_ans,ANS)
 
end role

role session(
	A,B :agent,
	M : message)
def=
 local SA, SB, RA, RB : channel(dy)
 composition
  keyowner(A,B,M,SA,RA)
 /\ keymanager(A,B,M,SB,RB)
end role

role environment()
def=
const renewal_ans,
k1 : protocol_id,
      a,b : agent,
      mab,mia,mib :message
intruder_knowledge = {a,b,mab}
composition
session(a,b,mab)
/\ session(a,i,mia)
/\ session(i,b,mib)
end role

goal
secrecy_of k1
authentication_on renewal_ans
end goal
environment()